{
  "compilerOptions": {
    "target": "ES2020",          // or ESNext
    "module": "ESNext",          // Enables ES module support
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
